# Disable password authetication
time ./pssh "sed -i 's/#PasswordAuthentication yes/PasswordAuthentication no/' /etc/ssh/sshd_config"
time ./pssh service ssh restart

# system update
time ./pssh "time (apt-get update && apt-get -y dist-upgrade && apt-get -y autoremove)"
time ./pssh "time (apt-get install -y htop git vim ctags)"

# git repository update
time ./pssh "(cd ~/work/cbdp && git pull)"

../git-pull && ./pssh "cd work/cbdp/twitter/40.replay && rm -rf target .dep-class-path && mvn package -DskipTests"
